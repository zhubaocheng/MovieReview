<div class=col-md-12>
  <div class="movie">
    <%= link_to("添加新电影", new_movie_path, class: "btn btn-primary pull-right") %>
  </div>
  <table class="table table-hover">
    <thead>
      <th> 电影名称 </th>
      <th> 简介 </th>
