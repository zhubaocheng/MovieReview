<h2 class="text-center"> 新增《<%= @movie.title %>》影评 </h2>
<hr>
<div class="col-md-4 col-md-offset-4">
  <%= simple_form_for [@movie, @review] do |f| %>
    <div class="form-group">
      <%= f.input :content, input_html: { class: "form-control"} %>
    </div>
    <div class="form-actions">
      <%= f.submit "提交", disable_with: "Submiting...", class: "btn btn-primary"%>
    </div>
  <% end %>
</div>
